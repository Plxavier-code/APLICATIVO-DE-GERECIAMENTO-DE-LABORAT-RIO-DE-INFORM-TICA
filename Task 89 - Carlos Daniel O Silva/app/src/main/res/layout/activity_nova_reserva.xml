<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout da tela "Nova Reserva". Contém:
        - DrawerLayout (menu lateral)
        - Toolbar customizada com menu, botão voltar e logo
        - Botões principais para escolher tipo de reserva
-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NovaReservaActivity">

    <!-- Layout principal que contém a barra superior + conteúdo da tela -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white">

        <!-- Toolbar personalizada -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:elevation="0dp">

            <!-- Botão de Menu -->
            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_menu"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="Menu"
                app:tint="#000000" />

            <!-- Botão de Voltar -->
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_voltar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_toEndOf="@id/menu_button"
                android:layout_centerVertical="true"
                android:contentDescription="Voltar"
                app:tint="#000000" />

            <!-- Logo da Toolbar -->
            <ImageView
                android:id="@+id/logo_ifba"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/logo_ifba"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name"/>
        </RelativeLayout>

        <!-- Conteúdo principal da tela -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="32dp">

            <!-- Botão para fazer reserva de laboratório -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLaboratorio"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:layout_marginBottom="40dp"
                android:backgroundTint="#D9D9D9"
                android:text="Fazer reserva de laboratório"
                android:textColor="#000000"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/icon_laboratorio"
                app:iconGravity="top"
                app:iconPadding="4dp"
                app:iconSize="48dp"
                app:iconTint="#000000" />

            <!-- Botão para fazer reserva de estação -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEstacao"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:backgroundTint="#D9D9D9"
                android:text="Fazer reserva de estação"
                android:textColor="#000000"
                android:textSize="16sp"
                app:cornerRadius="16dp"
                app:icon="@drawable/icon_estacao"
                app:iconGravity="top"
                app:iconPadding="4dp"
                app:iconSize="48dp"
                app:iconTint="#000000" />
        </LinearLayout>

    </LinearLayout>

    <!-- Menu lateral (Navigation Drawer) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#359A31"
        app:itemTextColor="@android:color/white"
        app:itemIconTint="@android:color/white"
        app:itemShapeFillColor="#20FFFFFF"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemVerticalPadding="8dp"/>
</androidx.drawerlayout.widget.DrawerLayout>