<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_admin_lab_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAB - H401"
            android:textAppearance="?attr/textAppearanceHeadline6" />

        <TextView
            android:id="@+id/text_admin_lab_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prédio H, 4º andar"
            android:textAppearance="?attr/textAppearanceBody2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_admin_manutencao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Manutenção"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btn_admin_bloquear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bloquear"
                app:backgroundTint="@color/design_default_color_error" /> </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>