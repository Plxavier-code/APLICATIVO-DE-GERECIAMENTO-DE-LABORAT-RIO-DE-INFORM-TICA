<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/btnCancelarReserva"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tvCardLabNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="LAB - H401"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvCardData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Data: 12/11/2025 - HorÃ¡rio: 16:30 - 18:30"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvCardDescricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Motivo: Mini curso"
                android:textSize="14sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnCancelarReserva"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_delete"
            app:tint="@android:color/holo_red_dark"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cancelar Reserva"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>