<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Admin Actions -->
        <Button
            android:id="@+id/btn_manage_inventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerenciar Inventário"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_register_maintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar Manutenção"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_manage_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerenciar Cadastros"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_generate_reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar Relatórios"
            android:visibility="gone" />

        <!-- Professor/Aluno Actions -->
        <Button
            android:id="@+id/btn_reserve_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar Estação"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_reserve_lab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reservar Laboratório"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_enter_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entrar na Fila de Espera"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_open_support_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir Chamado de Suporte"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_request_software"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitar Software Temporário"
            android:visibility="gone" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>