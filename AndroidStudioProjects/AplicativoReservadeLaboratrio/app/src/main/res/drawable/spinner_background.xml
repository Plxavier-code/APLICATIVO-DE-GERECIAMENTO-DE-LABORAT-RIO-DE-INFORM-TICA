<?xml version="1.0" encoding="utf-8"?>

<!--
    Arquivo drawable que define o estilo visual de fundo utilizado nos Spinners.
    Ele cria um retângulo com cantos arredondados e cor de fundo personalizada.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo cinza dos botões -->
    <solid android:color="#F5F5F5" />

    <!-- Raio das bordas redondas -->
    <corners android:radius="12dp" />

</shape>