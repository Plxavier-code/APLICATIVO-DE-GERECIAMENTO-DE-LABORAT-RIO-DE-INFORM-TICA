<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F5F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/layout_textos_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_toStartOf="@+id/layout_botoes_usuario">

            <TextView
                android:id="@+id/text_admin_usuario_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuário"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/text_admin_usuario_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@ifba.edu.br"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_admin_usuario_tipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluno - Matrícula: 2022123456"
                android:textColor="#555555"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_botoes_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/btn_admin_usuario_editar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_editar"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Editar Usuário"
                app:tint="#000000" />
            
            <ImageButton
                android:id="@+id/btn_admin_usuario_remover"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:layout_marginStart="8dp"
                android:contentDescription="Remover Usuário"
                app:tint="#E53935" /> 

        </LinearLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>